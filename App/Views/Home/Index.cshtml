@model IEnumerable<GaleriaModel>
@{
    ViewBag.Subtitulo = "Galerias de Imagens";
}

@foreach (GaleriaModel galeria in Model)
{
    if (galeria.Imagens.Count() > 0)
    {
        <h2>@galeria.Titulo</h2>
        <hr>
        <div class="row g-3">
            @foreach (ImagemModel imagem in galeria.Imagens)
            {
                <div class="col-2">
                    <div class="card">
                        <a href='@($"{imagem.CaminhoImagem}?width=600&{DateTime.Now.ToShortTimeString()}")' data-lightbox='@imagem.IdGaleria.ToString("D6")' data-title="@imagem.Titulo">
                            <img class="img-responsive p-3" src='@($"{imagem.CaminhoImagem}?width=200&{DateTime.Now.ToShortTimeString()}")' width="100%">
                        </a>
                    </div>
                </div>
            }
        </div>
        <hr>
    }

}

