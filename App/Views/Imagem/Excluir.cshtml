@model ImagemModel
@{
    ViewBag.Subtitulo = "Excluir Imagem";
}

<form method="post">
    <input type="hidden" asp-for="@Model.IdImagem" name="id">

    <div class="mt-3">
        <h3>Tem certeza que deseja excluir a imagem <b>@Model.Titulo</b>?</h3>
    </div>

    <div class="mt-3">
        <a class="btn btn-outline-danger" asp-action="Index" asp-controller="Imagem" asp-route-id="@Model.IdGaleria">Cancelar</a>
        <button class="btn btn-outline-success" type="submit">Excluir</button>
    </div>
</form>