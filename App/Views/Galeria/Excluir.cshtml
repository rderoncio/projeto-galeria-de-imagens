@model GaleriaModel
@{
    ViewBag.Subtitulo = "Excluir Galeria de Imagem";
}

<form method="post">
    <input type="hidden" asp-for="@Model.IdGaleria">
    <div class="mt-3">
        <h3>Tem certeza que deseja excluir a galeria <b>@Model.Titulo</b>?</h3>
    </div>

    <div class="mt-3">
        <a class="btn btn-outline-danger" asp-action="Index">Cancelar</a>
        <button class="btn btn-outline-success" type="submit">Excluir</button>
    </div>
</form>